\ProvidesPackageRCS $Header: /cvsroot/latex-beamer/latex-beamer/themes/color/beamercolorthemeEigen.sty,v 1.0 2008/04/09 11:00 Buxbaum Exp $
\RequirePackage{css-colors}
\mode<presentation>

\setbeamercolor{normal text}{fg=Indigo,bg=white}
\setbeamercolor{structure}{fg=MediumVioletRed}
\setbeamercolor{local structure}{parent=structure}

\setbeamercolor{alerted text}{fg=MediumVioletRed}
\setbeamercolor{example text}{fg=Green}
\setbeamercolor{math text}{fg=Indigo}

\setbeamercolor*{palette primary}{fg=Indigo,bg=MidnightBlue}
\setbeamercolor*{palette secondary}{fg=MediumVioletRed,bg=MediumPurple}
\setbeamercolor*{palette tertiary}{fg=PeachPuff,bg=Indigo}
\setbeamercolor*{palette quaternary}{fg=white,bg=SteelBlue}

\setbeamercolor*{palette sidebar primary}{fg=PeachPuff,bg=Indigo}
\setbeamercolor*{palette sidebar secondary}{fg=MediumVioletRed,bg=MediumPurple}
\setbeamercolor*{palette sidebar tertiary}{fg=Crimson,bg=MediumVioletRed}
\setbeamercolor*{palette sidebar quaternary}{fg=white,bg=SteelBlue}

\setbeamercolor{block title}{use=structure,fg=white,bg=structure.fg!75!Indigo}
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=alerted text.fg!75!Indigo}
\setbeamercolor{block title example}{use=example text,fg=white,bg=example text.fg!75!Indigo}

\setbeamercolor{block body}{parent=normal text,use=block title,bg=block title.bg!10!bg}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=block title alerted.bg!10!bg}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=block title example.bg!10!bg}

\setbeamercolor*{titlelike}{parent=palette secondary}
\setbeamercolor*{sidebar}{parent=palette sidebar primary}
\setbeamercolor{title}{bg=white,fg=Indigo}
\setbeamercolor{author in sidebar}{fg=Indigo}
\setbeamercolor{title in sidebar}{fg=Indigo}
\setbeamercolor{section in sidebar}{parent=palette sidebar primary}
\setbeamercolor{section in sidebar shaded}{use=section in sidebar,fg=section in sidebar.fg!40!bg}
\setbeamercolor{subsection in sidebar}{parent=palette sidebar primary}
\setbeamercolor{subsection in sidebar shaded}{use=subsection in sidebar,fg=subsection in sidebar.fg!40!bg}
\setbeamercolor{frametitle}{bg=white}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

\mode<all>
